@using Raisins.Client.ViewModels
@model BeneficiaryEditViewModel
@{
    ViewBag.Title = "Edit Beneficiary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    @using (Html.BeginForm("EditBeneficiary", "Beneficiaries"))
    {
        <div class="row">
            <h3>Edit Beneficiary</h3>
            <hr />
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.BeneficiaryID)
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3">
                <div class="form-group">
                    <button type="submit" class="btn btn-default pull-right">Save</button>
                </div>
            </div>
        </div>
    }
    <hr />
    @using (Html.BeginForm("Upload", "Beneficiaries", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Name)
        <div class="row">
            <div class="form-group">
                @Html.Label("Markdown Upload", new { @class = "col-md-2 control-label" })
                <input type="file" id="dataFile" name="upload" required="required" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3">
                <div class="form-group">
                    <button type="submit" class="btn btn-default pull-right">Upload</button>
                </div>
            </div>
        </div>
    }
    <br />
    <div class="row">
        <div class="col-md-2 col-md-offset-3">
            <div class="pull-right">
                @Html.ActionLink("Back to List", "ViewBeneficiaryList", "Beneficiaries")
            </div>
        </div>
    </div>
</div>


