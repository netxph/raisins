@using Raisins.Client.ViewModels
@model PaymentViewModel

@{
    ViewBag.Title = "Edit Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>    
    @using (Html.BeginForm("EditPayment", "Payments"))
    {
        <div class="row">
            <h3>Edit Payment</h3>
            <hr />
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PaymentID)
            @Html.HiddenFor(m => m.Locked)
            @Html.HiddenFor(m => m.CreatedDate)
            @Html.HiddenFor(m => m.CreatedBy)
            @Html.HiddenFor(m => m.ModifiedDate, new { @Value = DateTime.Now })
            @Html.HiddenFor(m => m.ModifiedBy, new { @Value = @HttpContext.Current.Session["user"].ToString() })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Beneficiary, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.DropDownListFor(m => m.Beneficiary, new SelectList(Model.Beneficiaries, "Name", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Currency, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.DropDownListFor(m => m.Currency, new SelectList(Model.Currencies, "CurrencyCode", "CurrencyCode"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.DropDownListFor(m => m.Type, new SelectList(Model.Types, "Type", "Type"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Source, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.DropDownListFor(m => m.Source, new SelectList(Model.Sources, "Source", "Source"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PaymentDate, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.PaymentDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.OptOut, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.CheckBoxFor(m => Model.OptOut)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3">
                <div class="form-group">
                    <button type="submit" class="btn btn-default pull-right">Save</button>
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-2 col-md-offset-3">
                <div class="pull-right">
                    @Html.ActionLink("Back to List", "ViewPaymentList", "Payments")
                </div>                
            </div>           
        </div>
    }
</div>

